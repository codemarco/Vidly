@model Vidly.Models.Movie

@{
    ViewBag.Title = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.GenreName</li>
    <li>Release: @Model.ReleaseDate</li>
    <li>Number in Stock: @Model.NumberInStock</li>
    <li>Date: @Model.DateTime</li>
</ul>
